<div class="container no-max-width">
  <form name="contentForm" class="cms-form" {{action "save" on="submit"}}>
    <div class="widget meta">
      <div class="form-control"><h2>{{currentAction}} {{collection.label}}</h2></div>
      <div class="preview"><h2>Preview {{collection.label}}</h2></div>
    </div>

    {{#each widget in widgets}}{{cms-widget widget=widget}}{{/each}}

    <div class="controls">
      <button class="button" {{bind-attr disabled=disableButton}}>
        {{#if saving}}Saving{{else}}{{currentAction}}{{/if}}
        {{collection.label}}{{#if saving}}...{{/if}}
      </button>
      {{#unless isValid}}<small class="invalid">Please fill out all required fields</small>{{/unless}}
    </div>
  </form>
</div>